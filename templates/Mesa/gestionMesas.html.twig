 {% extends "base.html.twig" %}
 
 {% block content %}

    <h1 class="mb-3">Gestion Mesas</h1>

    <div class="contentMesasAdmin">
        <label>Selecciona la fecha ‚è©</label>
        <input type="text" id='fecha-disposicion'>

        <div class="form-check form-switch" id='default-dispo-div'>
            <input type="checkbox" id='default-dispo' value='Disposicion por defecto' class="form-check-input">
            <label class="checkbox-switch form-check-label" for="default-dispo">Dispsicion Default</label>
        </div>
        <input type="button" id='btnNewMesa' class="boton boton--morado" value='Nueva mesa'>
    </div>
    <div id="contenedor-mesas" style="">
        <div id="sala" style=""></div>
        <div id="almacen" style=""></div>
    </div>

    <div id='divNewMesa' class='' style=''>
        {{ form_start(form,{'attr': {'id': 'newMesaForm', 'class': 'form col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center mt-3 '}}) }}
            {{ form_errors(form) }}
            {{ form_row(form.ancho) }}
            {{ form_row(form.longitud) }}
            
            <button type="submit" class="w-50 boton">Crear</button>

        {{ form_end(form) }}
    </div>
    
    {% if not form.vars.valid %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

 

 {% endblock %}