{% extends 'base.html.twig' %}

{% block content %}
<div id="fondoPantalla">
    {% for img in imgsJuegos %}
        <img class="imgFondo" src='{{img_juegos_path}}{{img}}'>
    {% endfor %}
</div>

<section class='contentHome mt-3'>
    <div>
        <h2 class='mt-1 mb-1'>Disfruta de los mejores juegos de mesa con tus amigos!</h2>
        <p class='mt-1 mb-1'>Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem Lorem </p>
        <div class='mt-1 mb-1'>
            <div class="boton boton--secundario-morado d-inline-block align-middle ml-1 mr-1">
                <a href='{{ absolute_url(path('app_login')) }}' class=''>Login</a>
            </div>
            <div class="boton boton--morado scroll-to-section d-inline-block align-middle ml-1 mr-1">
                <a href='{{ absolute_url(path('app_register')) }}' class=''>Registrarse</a>
            </div>
        </div>
    </div>

    <img src='{{img_path}}brand/juegos-de-mesa-1016059.jpg'>
</section>

<section class='reservaHome mt-3'>
    <p class='mt-1 mb-1'>Â¡Reserva tu juego favorito ya!</p>
    <div class="boton boton--gradient mt-1 mb-1 scroll-to-section d-inline-block align-middle">
        <a href='{{ absolute_url(path('app_reserva')) }}' class=''>Reservar</a>
    </div>
</section>

<div class="container-fluid mt-3">
      <div class="row">
        <div class="col-lg-12">
          <div class="owl-features owl-carousel owl-loaded owl-drag">
            <div class="owl-stage-outer">
                <div class="owl-stage" style="transition: all 0s ease 0s; width: 3702px; transform: translate3d(-2005px, 0px, 0px);">

                    {% for juego in juegos %}
                        <div class="owl-item" style="width: 278.5px; margin-right: 30px;">
                            <div class="item juego">
                                <h1>{{juego.nombre}}</h1>     
                                <img src='{{img_path}}juegos/{{juego.img}}'>
                                <div class='juego__texto'>
                                    <p>Min Jugadores : {{juego.minJuga}}</p>     
                                    <p>Max Jugadores : {{juego.maxJuga}}</p>     
                                </div>
                                <a href="{{ absolute_url(path('app_juego',{id: juego.id})) }}" class='boton boton--secundario '>Ver</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            
        </div>
      </div>
    </div>
</div>

